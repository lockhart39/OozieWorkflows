<kill name="fail">
    <message>Sqoop with text format failed.</message>
</kill>

<kill name="fail2">
<message>Sqoop with orc format failed.</message>
</kill>

<kill name="failWhere">
<message>Sqoop with where clause failed</message>
</kill>

<end name ="end"/>
</workflow-app>


